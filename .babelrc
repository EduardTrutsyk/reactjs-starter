{
  "presets": [
    "es2015",
    "react",
    "stage-0"
  ],

  "plugins": [
    "transform-decorators-legacy",
    "transform-react-constant-elements",
    "transform-react-inline-elements"
  ],

  "env": {
    "development": {
      "plugins": [
        ["react-transform", {
          "transforms": [{
            "transform": "react-transform-hmr",
            "imports": ["react"],
            "locals": ["module"]
          }]
        }]
      ]
    }
  }
}
